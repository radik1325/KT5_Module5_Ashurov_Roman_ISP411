<Page x:Class="Is_Prokat_Sport_Invent.Pages.AuthorizatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Is_Prokat_Sport_Invent.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ИС- Прокат спортивного инвентаря авторизация" Background="White">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Вход"  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"></TextBlock>
            <Label Content="Логин" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
            <TextBox Width="100" x:Name="LogimBox"></TextBox>
            <Label Content="Пароль" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
            <PasswordBox Width="100" x:Name="PasswordBox"></PasswordBox>
            <Button Content="Войти" Margin="5" x:Name="VxodButton" Click="VxodButton_Click"></Button>
        </StackPanel>
        
    </Grid>
</Page>
